<div itemscope itemtype="http:schema.org/Product" class="products">
  <% @products.each_with_index do |product, index| %>
    <% if index % 3 == 0 %>
    	<div class="row-fluid">
  	<% end %>
      	<div class="span4 product"><%= link_to image_tag(product.product_photos.first.photo(:medium)), product %>
          <div itemprop="offers" itemscope itemtype="http:schema.org/Offer" class="hidden">
            <meta itemprop="name" content="<% product.title.to_s.html_safe %>">
            <meta itemprop="price" content="<% product.price.to_s.html_safe %>">
            <meta itemprop="priceCurrency" content="USD">
            <meta itemprop="availability" content="http:schema.org/InStock">
          </div>
          <h5>
            <%= product.title %>
          </h5>
          <% product.tags.each do |tag| %>
            <%= link_to "#{tag.name} shirt", "/browse/search?query=#{tag.name}", class: "btn btn-primary yellow", style: 'margin-bottom: 5px;' %>
          <% end %>
        </div>
    <% if (index + 1) % 3 == 0 || @products.count == (index + 1)%>
    	</div>
  	<% end %>
	<% end %>	
</div>
        