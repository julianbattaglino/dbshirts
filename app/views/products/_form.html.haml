= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :category
    = select("product", "category_id", Category.all.collect {|c| [ c.name , c.id ] })
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :tags_separate_new_tags_with_commas
    = f.text_field :tag_list
  .field
    = f.label :featured
    = f.check_box :featured
  .field
    = link_to_add_fields "Add Image", f, :product_photos 
  .actions
    = f.submit 'Save'
