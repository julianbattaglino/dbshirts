<div itemscope itemtype="http:schema.org/Theme" class="products">
  <% @themes.each_with_index do |theme, index| %>
    <% if index % 3 == 0 %>
      <div class="row-fluid">
    <% end %>
        <div class="span4 theme">
          <a href="<%= "/themes/#{theme.to_param}" %>" style="display: block">
            <h4><span>top </span><%= theme.title %> <span>shirts</span></h4>
          </a>
          <%= link_to image_tag(theme.product_first.product_photos.first.photo(:medium)), theme %>
          <div itemprop="offers" itemscope itemtype="http:schema.org/Offer" class="hidden">
            <meta itemprop="name" content="<% theme.title.to_s.html_safe %>">
          </div>
          <p><%= theme.description %></p>
          
        </div>
    <% if (index + 1) % 3 == 0 || @themes.count == (index + 1)%>
      </div>
    <% end %>
  <% end %> 
</div>
        